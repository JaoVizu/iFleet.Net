@model pim2.Models.Veiculo

@{
    ViewData["Title"] = "Edit";
}

    <div class="header-views">

        <h1 class="title-font">Controle de veículos</h1>

        <nav class="header-nav">
            <ul class="header-nav-menu">
                <li class="header-menu-item"><a asp-action="Index" class="header-btn-portal">Voltar</a></li>
            </ul>
        </nav>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="row">
                        <div class="col-md-2">
                            <div class="form-group">
                                <label asp-for="Empresa_Id" class="control-label"></label>
                                <select asp-for="Empresa_Id" class="form-control" asp-items="ViewBag.Empresa_Id"></select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Nome" class="control-label"></label>
                                <input asp-for="Nome" class="form-control" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Cor" class="control-label"></label>
                                <input asp-for="Cor" class="form-control" />
                                <span asp-validation-for="Cor" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Modelo" class="control-label"></label>
                                    <input asp-for="Modelo" class="form-control" />
                                    <span asp-validation-for="Modelo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Ano" class="control-label"></label>
                                    <input asp-for="Ano" class="form-control" />
                                    <span asp-validation-for="Ano" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Placa" class="control-label"></label>
                                    <input asp-for="Placa" class="form-control" maxlength="7" />
                                    <span asp-validation-for="Placa" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Renavan" class="control-label"></label>
                                <input asp-for="Renavan" class="form-control" />
                                <span asp-validation-for="Renavan" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Marca" class="control-label"></label>
                                <input asp-for="Marca" class="form-control" />
                                <span asp-validation-for="Marca" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div style="text-align:center">
                        @if (ViewBag.Erro != null)
                        {
                            <h3 style="color: white; background-color: red">
                                @ViewBag.Erro
                            </h3>
                        }
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Salvar" class="btn btn-success col-md-offset-11" style="width:95px;" />
                    </div>
                </form>
            </div>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
